{
  "compilerOptions": {
    "target": "ES2020",                  // Target modern JavaScript
    "module": "CommonJS",               // Node.js uses CommonJS
    "outDir": "./dist",                 // Compiled JavaScript files go here
    "rootDir": "./src",                 // Root directory for TypeScript files
    "strict": true,                     // Enable strict type-checking
    "esModuleInterop": true,            // For compatibility with CommonJS and ES modules
    "skipLibCheck": true,               // Skip type checking for library files
    "resolveJsonModule": true,          // Allow importing JSON files
    "forceConsistentCasingInFileNames": true, // Prevent case-sensitive issues
    "noImplicitReturns": true,          // Ensure all code paths return a value
    "noFallthroughCasesInSwitch": true, // Prevent fallthrough in switch statements
    "allowJs": false                    // Disallow JavaScript files in the project
  },

  "include": ["src/**/*"],              // Include all files in src
  "exclude": ["node_modules", "dist"]   // Exclude node_modules and build output
}
